{
    "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
    "tailwindConfig": "./tailwind.config.js",
    "tailwindStylesheet": "./src/styles/globals.css",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "trailingComma": "es5",
